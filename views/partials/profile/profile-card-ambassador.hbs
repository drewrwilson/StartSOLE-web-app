<!--Ambassador email signature copying js-->
<script>
function copySignature() {
    var el = document.getElementById("email-signature");
    var range = document.createRange();
    range.selectNodeContents(el);
    var sel = window.getSelection();
    sel.removeAllRanges();
    sel.addRange(range);
    document.execCommand('copy');
    sel.empty();
    M.toast({html: '{{{__ "Signature Copied!"}}}'})
    return false;
}
</script>