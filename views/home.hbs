<div class="row" style="padding-top:20px;">


    <div class="col s12 offset-m1 m10 {{#if roleData.isRingleader }}{{else}}offset-l3{{/if}} l6">

        <div class="card">
            <div class="card-content center-align">
                <img class="hide-on-small-only" src="/images/logos/logo.svg">
                <h5 style="margin-bottom: 1em;">{{{__ "Let's get started"}}}</h5>
                <a class="waves-effect waves-light btn-large" href="/sole-create">{{{__ "Plan A Lesson"}}}</a>
                <br><br>
            </div>
            <div class="card-action center-align">
                <a href="/soles">{{{__ "My SOLEs"}}}</a>
                <a href="/questions">{{{__ "Explore Questions"}}}</a>
                <!--{{#if roleData.isAdmin }}-->
                    <a class="red-text" href="/admin">Admin</a>
                <!--{{/if}}-->
             </div>
        </div>

    </div>

    {{#if roleData.isRingleader }}
        {{#each rings}}
            <div class="col s12 offset-m1 m10 l6">
                <div class="card">
                    <div class="card-content center-align">
                        <h5>{{name}}</h5>
                        <div class="row">
                            <div class="col s12 m6">
                                <i class="medium material-icons">supervisor_account</i>
                                <br>
                                <p class="flow-text">{{membershipCount}} {{{__ "Educators"}}}</p>
                            </div>
                            <div class="col s12 m6 center-align">
                                <i class="medium material-icons">assessment</i>
                                <br>
                                <p class="flow-text">{{soleCount}} SOLEs</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <a href="/dashboard?ring={{id}}">{{{__ "Dashboard"}}}</a>
                    </div>
                </div>
            </div>
        {{/each}}
    {{/if}}
</div>

<script>
    document.cookie = 'language='+'{{config.language}}'; //save the language in the cookie
</script>
