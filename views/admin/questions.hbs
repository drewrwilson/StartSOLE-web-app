<div class="breadcrumb-wrapper">
    <a href="/" class="breadcrumb">Home</a>
    <a href="/admin" class="breadcrumb">Admin</a>
    <a class="breadcrumb">Questions</a>
</div>

<div class="row">
    <div class="col s6">
        <div class="card-panel">
            <h4 class="center-align">Search</h4>
            <div class="input-field">
                <i class="material-icons prefix">search</i>
                <input id="search" name="q" type="search"
                       class="keep-bottom"
                       placeholder="{{{__ "Search by keyword"}}}">
            </div>
            {{>standard-picker}}
        </div>
    </div>
    <div class="col s6">
        <div class="card-panel">
            <h4 class="center-align">Tag</h4>
            {{>standard-picker-pa}}
        </div>
    </div>
    <div class="col s12">
        <div class="card-panel">
            <form action="/admin/questions" method="post">
                <input type="hidden" name="action" id="action" value="addTag">
                <div class="row">
                    <div class="col s3">
                        <input placeholder="asn.testtag" id="selectedTag" name="selectedTag" type="text" value="asn.testtag">
                    </div>
                    <div class="col s9">
                        <button class="btn waves-effect waves-light" type="submit">Add Tag
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>


            <table class="striped">
                <thead>
                <tr>
                    <th>Select</th>
                    <th>Question</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>

                {{#each questions}}
                    <tr>
                        <td>
                            <label>
                                <input type="checkbox" name="questions" value="{{this.id}}"/>
                                <span></span>
                            </label>
                        </td>
                        <td>{{this.text}}</td>
                        <td></td>
                    </tr>
                {{/each}}

                </tbody>
            </table>

            </form>
        </div>
    </div>
</div>