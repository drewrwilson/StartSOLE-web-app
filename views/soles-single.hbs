<div class="breadcrumb-wrapper">
    <a href="/" class="breadcrumb">Home</a>
    <a href="/soles" class="breadcrumb">My SOLEs</a>
    <a class="truncate truncate-question breadcrumb">{{sole.question.question.text}}</a>
</div>

<div class="row">
    <div class="col s12">
        <div class="card-panel">
            {{#if sole}}
                <h3>{{sole.question.question.text}}</h3>
                <table class="striped responsive-table">
                    {{#each sole}}
                        <tr>
                            <th>{{@key}}</th>
                            <td>{{this}}</td>
                        </tr>
                    {{/each}}

                </table>
            {{else}}
                <h2>No SOLE found with that ID</h2>
            {{/if}}
        </div>
    </div>
</div>

