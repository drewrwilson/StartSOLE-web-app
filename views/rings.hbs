<div class="row" style="padding-top:20px;">


{{#if rings}}
    {{#each rings}}
    <div class="col s12 offset-m1 m10 l6">
        <div class="card">
            <div class="card-content center-align">
                <h5>{{name}}</h5>
                <div class="row">
                    <div class="col s12 m6">
                        <i class="medium material-icons">supervisor_account</i>
                        <br>
                        <p class="flow-text">{{membershipCount}} {{{__ "Educators"}}}</p>
                    </div>
                    <div class="col s12 m6 center-align">
                        <i class="medium material-icons">assessment</i>
                        <br>
                        <p class="flow-text">{{soleCount}} SOLEs</p>
                    </div>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/rings/{{id}}">{{{__ "Dashboard"}}}</a>
            </div>
        </div>
    </div>
{{/each}}
{{else}}
    <div class="col s12 offset-m1 m10 l6 offset-l3">
        <div class="card">
            <div class="card-content center-align">
                <h5>{{{__ "Oops! Nothing to show here!"}}}</h5>
                <div class="row">
                    <div class="col s12">
                        <p class="flow-text">{{{__ "You're not currently a part of any rings."}}}</p>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/if}}
</div>