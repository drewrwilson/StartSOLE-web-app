<a href="/">Home</a> > <strong>Your SOLEs</strong><br>

<div class="row">
    <div class="col s12">
        <div class="card-panel">
            <div class="row">
                <div class="col s12">
                    <ul class="tabs">
                        <li class="tab col s4"><a href="#planned">Planned</a></li>
                        <li class="tab col s4"><a class="active" href="#reflect">Reflect</a></li>
                        <li class="tab col s4 disabled"><a href="#completed">Completed</a></li>
                    </ul>
                </div>
                <div id="planned">
                    {{#each soles}}

                        <div class="col s12">
                            <div class="card-panel sole-card border_upcoming_sole">
                                <img src="images/logos/sole-card-logo.jpg"
                                     class="avatar-image hide-on-small-and-down">
                                <div class="question-text">
                                    {{question.text}}
                                </div>
                                <p class="sole-tag">
                                    Class 7C
                                </p>
                                <div class="sole-card-date">
                                    <span class="sole-day">
                                        {{planned_date.day}}
                                    </span>
                                    <span class="sole-month-year">
                                        {{planned_date.month}}
                                        <br>
                                        {{planned_date.year}}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="col s12 plan_download_container right-align">
                            <a class="waves-effect waves-light green btn">
                                Download Plan
                            </a>
                        </div>

                    {{/each}}





                </div>
                <div id="reflect" class="col s12">Test 2</div>
                <div id="completed" class="col s12">Test 3</div>
            </div>
        </div>
    </div>
</div>





{{#if soles}}
<h3>You have {{soles.length}} SOLEs:</h3>
<table class="responsive-table">

	<tr>
		<th>Planned Date</th>
		<th>Question</th>
		<th>Status</th>
	</tr>
	{{#each soles}}

		<tr>
			<td>{{planned_date}}</td>
			<td><a href="/soles/{{id}}">{{question.text}}</a></td>
			<td>{{state}}</td>
		</tr>
	{{/each}}
</table>

{{else}}
No SOLEs yet!
{{/if}}
