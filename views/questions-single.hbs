<div class="breadcrumb-wrapper">
    <a href="/" class="breadcrumb">Home</a>
    <a href="/questions" class="breadcrumb">Questions</a>
    {{#if question}}
        <a class="truncate truncate-question breadcrumb">{{question.text}}</a>
    {{/if}}
</div>

{{#if question}}
<h1>{{question.text}}</h1>

<a href="/questions/{{question.id}}/favorite">Favorite this question</a> |
<a href="/questions/{{question.id}}/copy">Copy this question</a>

{{else}}
    <br><br><br>
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card-panel">
                <div class="row center-align">
                    <h4>Whoops!</h4>
                </div>
                <div class="row">
                    <div class="col m12 l10 offset-l1">
                        <span>Looks like there is no question here with that ID.  Try searching for your next great
                        SOLE question by clicking the button below:
                        </span>
                    </div>
                </div>
                <div class="row center-align">
                    <a class="waves-effect waves-light btn">Explore Questions</a>
                </div>

            </div>
        </div>

    </div>

{{/if}}
