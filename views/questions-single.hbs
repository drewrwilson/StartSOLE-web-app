<div class="breadcrumb-wrapper">
    <a href="/?sesh={{sesh}}" class="breadcrumb">Home</a>
    <a href="/questions?sesh={{sesh}}" class="breadcrumb">Questions</a>
    {{#if question}}
        <a class="truncate truncate-question breadcrumb">{{question.text}}</a>
    {{/if}}
</div>

<div class="row">
    <div class="col s12">
        <div class="card-panel question-card">

            {{#if question}}
                <h3>{{question.text}}</h3>
                <hr>
                <div class="row hide-on-med-and-up">
                    <div class="col s12 right-align">
                        <a href="/questions/{{question.id}}/favorite?sesh={{sesh}}" class="waves-effect waves-light btn">
                            <i class="material-icons left">favorite</i>
                            Favorite
                        </a>
                        <a href="/sole-create?sesh={{sesh}}&question={{question.id}}" class="waves-effect waves-light
                        btn">
                            <i class="material-icons left">assignment</i>
                            Create Lesson
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        {{#each question.tags}}
                            <div class="chip truncate-tag tooltipped"
                                 data-position="bottom" data-tooltip="{{this.text}}">
                                {{this.text}}
                            </div>
                        {{/each}}
                    </div>
                </div>
                {{#if question.sourceURL}}
                <div class="row">
                    <div class="col s12">
                        Question Source: <a href="{{question.sourceURL}}" target="_new">{{question.sourceURL}}</a>
                    </div>
                </div>
                {{/if}}
            {{else}}
                <br><br><br>
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <div class="card-panel">
                            <div class="row center-align">
                                <h4>Whoops!</h4>
                            </div>
                            <div class="row">
                                <div class="col m12 l10 offset-l1">
                        <span>Looks like there is no question here with that ID.  Try searching for your next great
                        SOLE question by clicking the button below:
                        </span>
                                </div>
                            </div>
                            <div class="row center-align">
                                <a class="waves-effect waves-light btn">Explore Questions</a>
                            </div>

                        </div>
                    </div>

                </div>

            {{/if}}

        </div>
        <div class="action-buttons-header hide-on-small-only">
            <a class="teal btn-floating btn-large waves-effect waves-light tooltipped"
               data-position="bottom"
               data-tooltip="Favorite Question" href="/questions/{{question.id}}/favorite?sesh={{sesh}}">
                <i class="material-icons">favorite</i>
            </a>
            <a class="teal btn-floating btn-large waves-effect waves-light tooltipped"
               href="/sole-create?sesh={{sesh}}&question={{question.id}}"
               data-position="bottom"
               data-tooltip="Create Lesson Plan">
                <i class="material-icons">assignment</i>
            </a>
        </div>
    </div>
</div>
