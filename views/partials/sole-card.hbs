    <div class="card-panel sole-card">
        <a href="/soles/{{id}}{{#ifEquals state "reflect"}}/reflect{{else ifEquals state
                "completed"}}{{else}}/edit{{/ifEquals}}">
            <img src="/images/logos/sole-card-logo.jpg"
                 class="avatar-image hide-on-small-and-down">
        </a>
        <div class="question-text">
            <a href="/soles/{{id}}{{#ifEquals state "reflect"}}/reflect{{else ifEquals state
                    "completed"}}{{else}}/edit{{/ifEquals}}"
               class="black-text">
                {{question.text}}
                {{lessonplan}}
            </a>
        </div>
    {{#if tag}}
        <p class="sole-tag">
            {{tag}}
        </p>
    {{/if}}
        <div class="sole-card-date">
        <span class="sole-day">
            {{planned_date.day}}
        </span>
            <span class="sole-month-year">
            {{planned_date.month_text}}
                <br>
                {{planned_date.year}}
        </span>
        </div>
    <div class="sole-action-buttons">
        <a href="/soles/{{id}}/download-plan"
           class="waves-effect waves-light green btn"
           target="_blank">
            {{{__ "Download Plan"}}}
        </a>
        {{#if completed}}
            <a class="waves-effect waves-light green btn"
               href="/soles/{{id}}/download-summary"
               target="_blank">
                {{{__ "Download Summary"}}}
            </a>
        {{else}}
            <a class="waves-effect waves-light red btn"
               href="/soles/{{id}}/reflect">
                {{{__ "Reflect"}}}
            </a>
            <a class="btn-floating grey"
               href="/soles/{{id}}/delete">
                <i class="material-icons">delete</i>
            </a>
        {{/if}}
        <a class="btn-floating grey"
           href="/soles/{{id}}/copy">
            <i class="material-icons">content_copy</i>
        </a>
    </div>

    </div>
