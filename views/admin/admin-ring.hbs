</style>

<div class="breadcrumb-wrapper">
    <a href="/" class="breadcrumb">Home</a>
    <a class="breadcrumb" href="/admin">Admin</a>
    <a class="breadcrumb">Manage Ring</a>
</div>

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Manage Ring: {{ring.name}}</span>
                <p>There are <strong>{{ring.totalUsers}} users</strong> in this ring</p>


                <table class="highlight">
                    <thead>
                    <tr>
                        <th>Date Joined</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th>PubID</th>
                        <th>SOLEs Planned</th>
                        <th>SOLEs Completed</th>
                        <th>Date of Last SOLE</th>
                        <th>Remove from Ring</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each ring.users}}
                        <tr>
                            <td>{{this.dateJoined}}</td>
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                            <td>{{this.pubId}}</td>
                            <td>{{this.totalSolesPlanned}}</td>
                            <td>{{this.totalSolesCompleted}}</td>
                            <td>{{this.dateLastSole}}</td>
                            <td>
                                <a class="btn waves-effect waves-light red"
                                   href="#" id="remove-from-ring-btn-{{this.pubId}}" onclick="removeUserFromRing('{{this.pubId}}')">
                                    Remove
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="card-action center">
                <a href="/admin/rings/{{ring.id}}">View Dashboard</a>
                <a href="/admin/rings/{{ring.id}}/add-user">Add User</a>

            </div>
        </div>
    </div>
</div>


