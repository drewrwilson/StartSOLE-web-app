<div class="row" style="padding-top:20px;">


    <div class="col s12 offset-m1 m10 {{#if roleData.isRingleader }}{{else}}offset-l3{{/if}} l6">

        <div class="card">
            <div class="card-content center-align">
                <img class="hide-on-small-only" src="/images/logos/logo.svg">
                <h5 style="margin-bottom: 1em;">Let's get started</h5>
                <a class="waves-effect waves-light btn-large" href="/sole-create?sesh={{sesh}}">Plan A Lesson</a>
                <br><br>
            </div>
            <div class="card-action center-align">
                <a href="/soles?sesh={{sesh}}">My SOLEs</a>
                <a href="/questions?sesh={{sesh}}">Explore Questions</a>
                <!--{{#if roleData.isAdmin }}-->
                    <!--<a class="red-text" href="/admin?sesh={{sesh}}">Admin</a>-->
                <!--{{/if}}-->
             </div>
        </div>
        {{#if roleData.isAdmin }}
        <div class="card">
            <div class="card-content center-align">
                <h5 style="margin-bottom: 1em;">Admin Options</h5>

                <a class="waves-effect waves-light btn-large" href="/pending-soles?sesh={{sesh}}">Review Pending Soles</a>
                <br>
                or check out the full <a class="" href="/admin?sesh={{sesh}}">admin dashboard</a>

                <br><br>
            </div>
            <div class="card-action center-align">
                <a href="/admin/browse-soles?sesh={{sesh}}">Browse All Soles</a>
                <a href="/admin/browse-users?sesh={{sesh}}">Browse Users</a>
                <a href="/admin/events?sesh={{sesh}}">Conferences</a>
            </div>
        </div>
        {{/if}}

    </div>

    {{#if roleData.isRingleader }}
        {{#each rings}}
            <div class="col s12 offset-m1 m10 l6">
                <div class="card">
                    <div class="card-content center-align">
                        <h5>{{name}}</h5>
                        <div class="row">
                            <div class="col s12 m6">
                                <i class="medium material-icons">supervisor_account</i>
                                <br>
                                <p class="flow-text">{{membershipCount}} Educators</p>
                            </div>
                            <div class="col s12 m6 center-align">
                                <i class="medium material-icons">assessment</i>
                                <br>
                                <p class="flow-text">{{soleCount}} SOLEs</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <!--<a href="/dashboard/question-approval?sesh={{sesh}}">Question Approval</a>-->
                        <a href="/dashboard?sesh={{../sesh}}&ring={{id}}">Dashboard</a>
                    </div>
                </div>
            </div>
        {{/each}}
    {{/if}}
</div>
